# Production Environment Configuration
# Copy these settings to your production environment

# Production Features
NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=warn

# Session Security
SESSION_SECURE=true
SESSION_MAX_AGE=86400000

# CORS Security - Replace with your actual production domain
CORS_ALLOWED_ORIGINS=https://tomriddelsdell.com

# Rate Limiting - Production values
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Database Security
DB_SSL_ENABLED=true
DB_SSL_REJECT_UNAUTHORIZED=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# Feature Flags
FEATURE_EMAIL_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_NEW_USER_REGISTRATION=true
MAINTENANCE_MODE=false

# Logging
LOG_ENABLE_CONSOLE=false
LOG_ENABLE_FILE=true
LOG_ENABLE_DATABASE=true
LOG_FORMAT=json