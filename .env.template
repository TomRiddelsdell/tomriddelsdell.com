# Environment Configuration Template
# Copy this file to .env and customize values for your environment
# This file contains all possible configuration options with safe defaults

# Core Application
NODE_ENV=development
DATABASE_URL=postgresql://localhost/flowcreate_dev

# Security Configuration
# Session Configuration
SESSION_SECRET=dev_session_secret_32_characters_long_default
SESSION_SECURE=false
SESSION_MAX_AGE=604800000
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,http://127.0.0.1:3000,http://127.0.0.1:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Database Pool Configuration
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=2000
DB_SSL_ENABLED=false
DB_SSL_REJECT_UNAUTHORIZED=false

# AWS Cognito Configuration
VITE_AWS_COGNITO_CLIENT_ID=dev_client_id
AWS_COGNITO_CLIENT_SECRET=dev_cognito_client_secret
VITE_AWS_COGNITO_USER_POOL_ID=dev_pool_id
VITE_AWS_COGNITO_REGION=us-east-1
VITE_AWS_COGNITO_HOSTED_UI_DOMAIN=dev-hosted-ui-domain
AWS_COGNITO_HOSTED_UI_DOMAIN=https://dev-domain.auth.us-east-1.amazoncognito.com

# AWS Infrastructure
AWS_ACCESS_KEY_ID=dev_access_key_id
AWS_SECRET_ACCESS_KEY=dev_secret_access_key
AWS_DEFAULT_REGION=eu-west-2
AWS_ACCOUNT_ID=your_aws_account_id

# AWS Cognito Client Secret (in addition to existing fields)
AWS_COGNITO_CLIENT_SECRET=dev_cognito_client_secret

# GitHub Integration
GITHUB_TOKEN=dev_github_token
GITHUB_OWNER=TomRiddelsdell
GITHUB_REPO=tomriddelsdell.com

# Email Service (SendGrid)
EMAIL_PROVIDER=none
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@tomriddelsdell.com.app
SENDGRID_FROM_NAME=tomriddelsdell.com

# External Service URLs
BASE_URL=http://localhost:5000
CALLBACK_URL=http://localhost:5000/auth/callback
LOGOUT_URL=http://localhost:5000

# API Gateway Configuration
API_GATEWAY_PORT=5000
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_TIMEOUT=30000

# Feature Flags
DEBUG_MODE=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_EMAIL_ENABLED=false
MAINTENANCE_MODE=false
FEATURE_NEW_USER_REGISTRATION=true

# Logging Configuration
# LOG_LEVEL is environment-specific: debug for development, info for production
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=false
LOG_ENABLE_DATABASE=false
LOG_FORMAT=simple
LOG_MAX_FILE_SIZE=10mb
LOG_MAX_FILES=3

# MCP Server Endpoints
AWS_MCP_ENDPOINT=http://aws-mcp:8001
NEPTUNE_MCP_ENDPOINT=http://neptune-mcp:8002

# Optional Services
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret
NEPTUNE_ENDPOINT=your_neptune_cluster_endpoint

# Docker Compose Infrastructure
POSTGRES_PASSWORD=your_postgres_password_here
RABBITMQ_PASSWORD=your_rabbitmq_password_here  
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password_here

# Database Legacy Configuration (if needed)
PGDATABASE=your_database_name
PGHOST=your_database_host
PGUSER=your_database_user
PGPASSWORD=your_database_password

# AWS Infrastructure Certificates (for GitHub Actions)
STAGING_CERTIFICATE_ARN=arn:aws:acm:us-east-1:account:certificate/staging-cert-id
PRODUCTION_CERTIFICATE_ARN=arn:aws:acm:us-east-1:account:certificate/production-cert-id
COGNITO_USER_POOL_ID=your_cognito_user_pool_id

# Replit/Deployment Specific (leave empty for local development)
REPLIT_DOMAINS=
