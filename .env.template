# Environment Variables Template
# Copy this to .env and fill in your actual values
# NEVER commit the .env file to source control

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
PGDATABASE=your_database_name
PGHOST=your_database_host
PGUSER=your_database_user
PGPASSWORD=your_database_password

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=eu-west-2

# AWS Cognito
VITE_AWS_COGNITO_CLIENT_ID=your_cognito_client_id
VITE_AWS_COGNITO_REGION=eu-west-2
VITE_AWS_COGNITO_USER_POOL_ID=your_cognito_user_pool_id
AWS_COGNITO_HOSTED_UI_DOMAIN=https://your-domain.auth.eu-west-2.amazoncognito.com
VITE_AWS_COGNITO_HOSTED_UI_DOMAIN=https://your-domain.auth.eu-west-2.amazoncognito.com
AWS_COGNITO_CLIENT_SECRET=your_cognito_client_secret

# Third-party Services
SENDGRID_API_KEY=SG.your_sendgrid_api_key
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-your_google_client_secret

# Application Secrets
SESSION_SECRET=your_long_random_session_secret

# GitHub Integration
GITHUB_TOKEN=github_pat_your_github_personal_access_token
GITHUB_OWNER=TomRiddelsdell
GITHUB_REPO=tomriddelsdell.com

# AWS Infrastructure (for GitHub Actions setup)
AWS_ACCOUNT_ID=your_aws_account_id
STAGING_CERTIFICATE_ARN=arn:aws:acm:us-east-1:account:certificate/staging-cert-id
PRODUCTION_CERTIFICATE_ARN=arn:aws:acm:us-east-1:account:certificate/production-cert-id
COGNITO_USER_POOL_ID=your_cognito_user_pool_id

# Neptune (optional)
NEPTUNE_ENDPOINT=your_neptune_cluster_endpoint
