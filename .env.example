# Portfolio Platform Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control!

# Node Environment
NODE_ENV=development

# Git Configuration (Optional - for automatic git setup)
GIT_USER_NAME=Your Name
GIT_USER_EMAIL=your.email@example.com

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@ep-example.us-east-1.aws.neon.tech/neondb?sslmode=require
NEON_API_KEY=your_neon_api_key_here

# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Doppler Secrets Management
DOPPLER_TOKEN=dp.st.your_doppler_service_token

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Cloudflare Workers Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# Confluent Kafka Configuration
CONFLUENT_CLOUD_API_KEY=your_confluent_api_key
CONFLUENT_CLOUD_API_SECRET=your_confluent_api_secret

# Authentication (Future Phase)
# These will be added when implementing OAuth in later phases
# COGNITO_USER_POOL_ID=
# COGNITO_CLIENT_ID=
# COGNITO_CLIENT_SECRET=
# JWT_SECRET=

# Development URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
