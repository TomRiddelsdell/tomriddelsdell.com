#!/bin/bash
# Pre-commit hook for DevContainer security validation
# Install this as .git/hooks/pre-commit

echo "üîí Running DevContainer Security Validation..."

# Run the security validation script
if ! .devcontainer/validate-security.sh; then
    echo ""
    echo "‚ùå Pre-commit blocked: Security violations detected"
    echo "Fix the issues above before committing"
    echo ""
    echo "To bypass this check (NOT RECOMMENDED):"
    echo "git commit --no-verify"
    exit 1
fi

echo "‚úÖ Security validation passed - proceeding with commit"
