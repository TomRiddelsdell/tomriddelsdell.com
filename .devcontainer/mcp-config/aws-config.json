{
  "name": "aws-mcp-server",
  "version": "1.0.0",
  "description": "AWS CLI MCP Server for infrastructure management",
  "capabilities": {
    "cloudformation": {
      "operations": ["create-stack", "update-stack", "delete-stack", "describe-stacks"],
      "templates": ["neptune-cluster", "vpc-setup", "iam-roles"]
    },
    "ec2": {
      "operations": ["describe-instances", "describe-vpcs", "describe-security-groups"]
    },
    "neptune": {
      "operations": ["describe-db-clusters", "describe-db-instances", "create-db-cluster"]
    },
    "iam": {
      "operations": ["create-role", "attach-role-policy", "create-policy"]
    },
    "cost": {
      "operations": ["get-cost-and-usage", "get-dimension-values"]
    }
  },
  "endpoints": {
    "health": "/health",
    "execute": "/mcp/execute"
  }
}
