# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your actual values
# DO NOT commit terraform.tfvars to version control

# Doppler Configuration
# Get this from: doppler configs tokens create terraform-admin --project tomriddelsdell-infra --config dev
doppler_admin_token = "dp.sa.xxxxxxxxxxxx"
doppler_project_name = "tomriddelsdell-infra"

# GitHub Configuration
# Create a Personal Access Token with 'repo' and 'admin:org' scopes
# https://github.com/settings/tokens/new
github_token = "ghp_xxxxxxxxxxxx"
github_owner = "TomRiddelsdell"
github_repository = "tomriddelsdell.com"

# Cloudflare Configuration
# Get these from your Cloudflare dashboard
cloudflare_account_id = "acxxxxxxxxxxxxxxxxxx"
cloudflare_api_token = "your-cloudflare-api-token"
domain_name = "tomriddelsdell.com"

# GitHub OAuth Configuration
# Create an OAuth app at: https://github.com/settings/applications/new
# Callback URL: https://tomriddelsdell.cloudflareaccess.com/cdn-cgi/access/callback
github_oauth_client_id = "your-github-oauth-client-id"
github_oauth_client_secret = "your-github-oauth-client-secret"

# Git Repository
git_repository_url = "https://github.com/TomRiddelsdell/tomriddelsdell.com"
